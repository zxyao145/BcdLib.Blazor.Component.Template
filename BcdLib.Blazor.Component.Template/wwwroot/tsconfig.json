{
  "compilerOptions": {
    "outDir": "./dist/ts", //不输出ts编译结果
    "noEmit": false, //不输出ts编译结果
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es6",
    "allowJs": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ES2018",
      "ES2019",
      "ES2020"
    ]
  },
  "include": [
    "./src/index.ts"
  ],
  "exclude": [
    "./node_modules/**/*",
    "./dist/**/*"
  ]
}